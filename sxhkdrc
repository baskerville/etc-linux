#
# bspwm hotkeys
#

super + alt + {Escape,shift + Escape}
    {bspc list_monitors > "$BSPWM_LAYOUT"; bspc list_history > "$BSPWM_HISTORY"; bspc quit,bspc quit 1}

super + t
    bspc cycle_layout

super + {r,shift + r,u}
    bspc rotate {clockwise,counter_clockwise,full_cycle}

super + {backslash,shift + backslash}
    bspc flip {vertical,horizontal}

super + b
    bspc balance

super + {s,f,x,z}
    bspc toggle_{floating,fullscreen,locked,visibility}

super + {grave,Tab}
    bspc {alternate,alternate_desktop}

super + {h,j,k,l}
    bspc focus {left,down,up,right}

super + shift + {h,j,k,l}
    bspc shift {left,down,up,right}

super + Return
    bspc swap

super + {m,y}
    bspc swap {biggest,smallest}

super + g
    togglepanel

super + {o,i}
    bspc nearest {older,newer}

super + {d,shift + d}
    bspc cycle {next,prev} --skip-floating

super + {a,v,e}
    bspc cycle next {--skip-tiled,--skip-class-equal,--skip-class-differ}

super + shift + {a,v,e}
    bspc cycle prev {--skip-tiled,--skip-class-equal,--skip-class-differ}

super + {comma,period}
    bspc circulate {backward,forward}

super + {c,shift + c}
    bspc cycle {next,prev}

super + bracket{left,right}
    bspc cycle_desktop {prev,next}

super + ctrl + bracket{left,right}
    bspc cycle_desktop {prev,next} --skip-free

super + alt + bracket{left,right}
    bspc cycle_desktop {prev,next} --skip-occupied

super + ctrl + {h,j,k,l}
    bspc presel {left,down,up,right}

super + ctrl + shift + {h,j,k,l}
    bspc presel {left 0.33,down 0.66,up 0.33,right 0.66}

super + ctrl + space
    bspc cancel

super + alt + {h,j,k,l}
    bspc push {left,down,up,right}

super + alt + shift + {h,j,k,l}
    bspc pull {right,up,down,left}

super + alt + ctrl + {1-9,0}
    bspc set window_gap {0,3,6,9,15,24,39,63,102,165}

super + ctrl + {1-9}
    bspc ratio 0.{1-9}

super + {1-9,0}
    bspc use {One,Two,Three,Four,Five,Six,Seven,Eight,Nine,Ten}

super + shift + {1-9,0}
    bspc send_to {One,Two,Three,Four,Five,Six,Seven,Eight,Nine,Ten}

super + shift + bracket{left,right}
    bspc drop_to {prev,next}

super + alt + shift + bracket{left,right}
    bspc drop_to {prev,next} --follow

:button1
    bspc grab_pointer focus

super + button{1,2,3}
    bspc grab_pointer {move,resize_side,resize_corner}

super + !button{1,2,3}
    bspc {track_pointer,track_pointer,track_pointer} %i %i

super + @button{1,2,3}
    bspc {ungrab_pointer,ungrab_pointer,ungrab_pointer}

#
# wm independent hotkeys
#

super + Escape
    pkill -USR1 -x sxhkd

super + {w,shift + w}
    bspc {close,kill}

super + ctrl + {slash,shift + slash}
    {terminal -cd "$HOME",terminal}

super + space
    dmenu_launch

super + ctrl + {comma,shift + comma,period}
    focus_or_run {dwb,dwb_restore,mutt}

super + {semicolon,shift + semicolon}
    glean_{primary,clipboard}

super + {apostrophe,shift + apostrophe}
    open {"$(recent "$XDG_DOWNLOAD_DIR" | head -n 1)","$(xclip -sel clip -o)"}

super + ctrl + {c,shift + c}
    focus_or_run {bspwm,sxhkd}_config

XF86MonBrightness{Down,Up}
    bright {-1,+1}

shift + XF86MonBrightness{Down,Up}
    bright {-10,+10}

super + XF86MonBrightness{Down,Up}
    bright {min,max}

XF86AudioMute
    volume toggle

XF86Audio{Lower,Raise}Volume
    volume {lower,raise}

shift + XF86Audio{Lower,Raise}Volume
    volume strong_{lower,raise}

super + alt + {0-9}
    mpc -q seek {0-9}0%

XF86Audio{Prev,Next}
    mpc -q {prev,next}

XF86AudioPlay
    mpc -q toggle

super + ctrl + XF86AudioPlay
    mpc load radios

super + XF86Audio{Prev,Next}
    mpc seek {-1,+1}

super + {XF86AudioPlay,shift + XF86AudioPlay}
    {focus_or_run ncmpcpp,copy_mpd_title}

super + ctrl + p
    pwgen -nc | tr -d '\n' | xsel -bi

super + {equal,shift + equal}
    {mosaic "$XDG_DOWNLOAD_DIR",sxiv -dbt "$XDG_DOWNLOAD_DIR/"dl*_*/*}

super + ctrl + {a,shift + a,t,i}
    focus_or_run {accounts,boards,top,notes}

super + ctrl + g
    pickcolor

super + {XF86LaunchA,shift + @XF86LaunchA}
    scrot {-e,-s -e} 'image_viewer $f'

XF86KbdBrightness{Down,Up}
    togglethm {dark,light}

super + XF86KbdBrightness{Down,Up}
    {launchpanel,killpanel}

shift + XF86Eject
    wodim -eject

super + XF86Eject
    dpms_standby

super + {alt,ctrl,alt + ctrl} + XF86Eject
    sudo systemctl {suspend,reboot,poweroff}

# vim: set ft=sxhkdrc:
