#
# bspwm hotkeys
#

super + Escape
    pkill -USR1 -x sxhkd

super + alt + Escape
    wm_restart

super + alt + shift + Escape
    bspc quit 1

super + w
    bspc close

super + shift + w
    bspc kill

super + t
    bspc cycle_layout

super + y
    bspc cycle_layout

super + r
    bspc rotate clockwise

super + shift + r
    bspc rotate counter_clockwise

super + u
    bspc rotate full_cycle

super + s
    bspc toggle_floating

super + f
    bspc toggle_fullscreen

super + x
    bspc toggle_locked

super + z
    bspc toggle_visibility

super + Return
    bspc alternate

super + Tab
    bspc alternate_desktop

super + h
    bspc focus left

super + l
    bspc focus right

super + k
    bspc focus up

super + j
    bspc focus down

super + shift + h
    bspc shift left

super + shift + l
    bspc shift right

super + shift + k
    bspc shift up

super + shift + j
    bspc shift down

super + o
    bspc nearest older

super + i
    bspc nearest newer

super + d
    bspc cycle next --skip-floating

super + shift + d
    bspc cycle prev --skip-floating

super + a
    bspc cycle next --skip-tiled

super + shift + a
    bspc cycle prev --skip-tiled

super + grave
    bspc cycle next --skip-class-equal

super + shift + grave
    bspc cycle prev --skip-class-equal

super + e
    bspc cycle next --skip-class-differ

super + shift + e
    bspc cycle prev --skip-class-differ

super + comma
    bspc circulate backward

super + period
    bspc circulate forward

super + c
    bspc cycle next

super + shift + c
    bspc cycle prev

super + bracketright
    bspc cycle_desktop next

super + bracketleft
    bspc cycle_desktop prev

super + ctrl + bracketright
    bspc cycle_desktop next --skip-free

super + ctrl + bracketleft
    bspc cycle_desktop prev --skip-free

super + ctrl + h
    bspc presel left

super + ctrl + l
    bspc presel right

super + ctrl + k
    bspc presel up

super + ctrl + j
    bspc presel down

super + ctrl + shift + h
    bspc presel left 0.33

super + ctrl + shift + l
    bspc presel right 0.66

super + ctrl + shift + k
    bspc presel up 0.33

super + ctrl + shift + j
    bspc presel down 0.66

super + BackSpace
    bspc cancel

super + alt + h
    bspc push left

super + alt + l
    bspc push right

super + alt + k
    bspc push up

super + alt + j
    bspc push down

super + alt + shift + l
    bspc pull left

super + alt + shift + h
    bspc pull right

super + alt + shift + j
    bspc pull up

super + alt + shift + k
    bspc pull down

super + alt + ctrl + 1
    bspc set window_gap 0

super + alt + ctrl + 2
    bspc set window_gap 3

super + alt + ctrl + 3
    bspc set window_gap 6

super + alt + ctrl + 4
    bspc set window_gap 9

super + alt + ctrl + 5
    bspc set window_gap 15

super + alt + ctrl + 6
    bspc set window_gap 24

super + alt + ctrl + 7
    bspc set window_gap 39

super + alt + ctrl + 8
    bspc set window_gap 63

super + alt + ctrl + 9
    bspc set window_gap 102

super + alt + ctrl + 0
    bspc set window_gap 165

super + ctrl + 1
    bspc ratio 0.1

super + ctrl + 2
    bspc ratio 0.2

super + ctrl + 3
    bspc ratio 0.3

super + ctrl + 4
    bspc ratio 0.4

super + ctrl + 5
    bspc ratio 0.5

super + ctrl + 6
    bspc ratio 0.6

super + ctrl + 7
    bspc ratio 0.7

super + ctrl + 8
    bspc ratio 0.8

super + ctrl + 9
    bspc ratio 0.9

super + 1
    bspc use One

super + 2
    bspc use Two

super + 3
    bspc use Three

super + 4
    bspc use Four

super + 5
    bspc use Five

super + 6
    bspc use Six

super + 7
    bspc use Seven

super + 8
    bspc use Eight

super + 9
    bspc use Nine

super + 0
    bspc use Ten

super + shift + 1
    bspc send_to One

super + shift + 2
    bspc send_to Two

super + shift + 3
    bspc send_to Three

super + shift + 4
    bspc send_to Four

super + shift + 5
    bspc send_to Five

super + shift + 6
    bspc send_to Six

super + shift + 7
    bspc send_to Seven

super + shift + 8
    bspc send_to Eight

super + shift + 9
    bspc send_to Nine

super + shift + 0
    bspc send_to Ten

#
# wm independent hotkeys
#

super + ctrl + slash
    urxvtc

super + ctrl + shift + slash
    urxvtc -cd "$HOME/incoming"

super + space
    dmenu_launch

super + ctrl + comma
    focus_or_run dwb

super + ctrl + shift + comma
    focus_or_run dwb_restore

super + ctrl + period
    focus_or_run mutt

super + ctrl + shift + period
    focus_or_run slrn

super + apostrophe
    lasso

super + shift + apostrophe
    small_lasso

super + semicolon
    glean_primary

super + shift + semicolon
    glean_clipboard

super + ctrl + c
    focus_or_run bspwm_config

super + shift + ctrl + c
    focus_or_run sxhkd_config

MonBrightnessDown
    dbright -1

MonBrightnessUp
    dbright +1

shift + MonBrightnessDown
    dbright -10

shift + MonBrightnessUp
    dbright +10

AudioMute
    dvol toggle

AudioLowerVolume
    dvol lower

AudioRaiseVolume
    dvol raise

shift + AudioLowerVolume
    dvol strong_lower

shift + AudioRaiseVolume
    dvol strong_raise

super + alt + 0
    mpc -q seek 0%

super + alt + 1
    mpc -q seek 10%

super + alt + 2
    mpc -q seek 20%

super + alt + 3
    mpc -q seek 30%

super + alt + 4
    mpc -q seek 40%

super + alt + 5
    mpc -q seek 50%

super + alt + 6
    mpc -q seek 60%

super + alt + 7
    mpc -q seek 70%

super + alt + 8
    mpc -q seek 80%

super + alt + 9
    mpc -q seek 90%

AudioPrev
    mpc -q prev

AudioNext
    mpc -q next

AudioPlay
    mpc -q toggle

super + ctrl + AudioPlay
    mpc load radios

super + AudioPrev
    mpc seek -1

super + AudioNext
    mpc seek +1

super + AudioPlay
    focus_or_run ncmpcpp

super + shift + AudioPlay
    copy_mpd_title

super + Insert
    copy_primary_to_clipboard

super + shift + Insert
    copy_clipboard_to_primary

super + ctrl + p
    dash -c "printf $(pwgen -nc) | xsel -bi"

super + equal
    mosaic "$HOME/incoming"

super + shift + equal
    mosaic "$HOME/image"

super + ctrl + a
    focus_or_run accounts

super + ctrl + shift + a
    focus_or_run boards

super + ctrl + t
    focus_or_run htop

super + ctrl + i
    focus_or_run notes

LaunchB
    dvol status

shift + LaunchB
    dbright status

super + b
    dbatt status

super + ctrl + g
    pickcolor

super + LaunchA
    scrot

super + shift + @LaunchA
    scrot -s

KbdBrightnessDown
    togglethm dark

KbdBrightnessUp
    togglethm light

super + KbdBrightnessDown
    updatethm

super + KbdBrightnessUp
    reloadpanel

shift + Eject
    wodim -eject

super + Eject
    dpms_standby

super + alt + Eject
    sudo systemctl suspend

super + ctrl + Eject
    sudo systemctl reboot

super + alt + ctrl + Eject
    sudo systemctl poweroff

